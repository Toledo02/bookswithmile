<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Painel Administrativo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Painel de Controle</h1>
        <div>
            <span class="me-3">Olá, Milene!</span>
            <a href="/admin/logout" class="btn btn-outline-danger btn-sm">Sair</a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Meus Livros</h5>
            <a href="/admin/novo" class="btn btn-success">+ Nova Resenha</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Capa</th>
                        <th>Título</th>
                        <th>Autor</th>
                        <th>Data</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% livros.forEach(livro => { %>
                    <tr>
                        <td style="width: 80px;">
                            <% if(livro.imagem) { %>
                                <img src="<%= livro.imagem %>" width="50" class="rounded">
                            <% } %>
                        </td>
                        <td><%= livro.titulo %></td>
                        <td><%= livro.autor %></td>
                        <td><%= new Date(livro.data_criacao).toLocaleDateString('pt-BR') %></td>
                        <td class="text-end">
                            <a href="/livro/<%= livro.id %>" target="_blank" class="btn btn-sm btn-info text-white">Ver</a>
                            <a href="/admin/editar/<%= livro.id %>" class="btn btn-sm btn-warning">Editar</a>
                            <a href="/admin/deletar/<%= livro.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza que deseja excluir?')">Excluir</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</body>
</html>